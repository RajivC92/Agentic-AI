# Production environment configuration
# Copy this to .env and fill in your actual values

# ===========================================
# API KEYS (REQUIRED)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
NEWS_API_KEY=your_newsapi_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite (default)
DATABASE_URL=sqlite:///./data/newsgenie_sessions.db

# PostgreSQL (optional, for production scale)
# DATABASE_URL=postgresql://newsgenieuser:changeme123@postgres:5432/newsgenie
POSTGRES_PASSWORD=your_secure_postgres_password

# ===========================================
# REDIS CONFIGURATION (optional)
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=your_super_secret_key_for_sessions_and_encryption
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
MAX_WORKERS=4
MAX_REQUESTS_PER_MINUTE=60
CACHE_TTL=300

# ===========================================
# MONITORING & LOGGING
# ===========================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_ENABLED=true

# ===========================================
# STREAMLIT CONFIGURATION
# ===========================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_THEME_BASE=light